<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.SecondActivity"
android:orientation="vertical">

<ImageView
    android:contentDescription="Slika hrane"
    android:id="@+id/image_viewer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_naziv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_opis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<Spinner
    android:id="@+id/sp_kategorija"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<ListView
    android:id="@+id/lv_sastojci"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/tv_kalorije"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_cena"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<RatingBar
    android:id="@+id/rb_rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numStars="5"/>

</LinearLayout>